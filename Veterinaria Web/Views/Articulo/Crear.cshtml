@model Veterinaria_Web.Models.Entities.Articulo


@{
    Layout = "_LayoutDashboard";
    <link rel="stylesheet" href="~/css/cruds.css" asp-append-version="true" />
}


<div class="container-fluid espaciado">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear Articulo</strong></h1>

            </div>
<form asp-action="Crear" asp-controller="Articulo" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" placeholder="Ingresa la descripcion" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
            <input asp-for="Cantidad" class="form-control" placeholder="Ingresa la cantidad" type="number" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="Img" class="control-label" placeholder="Ingresa la img"></label>
        <input asp-for="Img" class="form-control" type="file" name="Img" accept="image/*" required />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio" type="number" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
</div>
</div>
</div>