@model Veterinaria_Web.Models.Entities.Citas


@{
    Layout = "_LayoutDashboard";
    <link rel="stylesheet" href="~/css/cruds.css" asp-append-version="true" />
}


<div class="container-fluid espaciado">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear Promocion</strong></h1>

            </div>
    <form asp-action="Crear" asp-controller="Cita" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" class="form-control" placeholder="Ingresa la descripcion" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" placeholder="Ingresa su correo" type="email" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Servicio"></label>
            <input asp-for="Servicio" class="form-control" placeholder="Ingresa un servicio"  />
            <span asp-validation-for="Servicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha">Fecha y Hora </label>
            <input asp-for="Fecha" type="datetime-local" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Numero"></label>
            <input asp-for="Numero" class="form-control" placeholder="Ingresa su numero" type="number"/>
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombreanimal"></label>
            <input asp-for="Nombreanimal" class="form-control" placeholder="Ingrese el nombre de su mascota" />
            <span asp-validation-for="Nombreanimal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Animal"></label>
            <input asp-for="Animal" class="form-control" placeholder="Ingrese el tipo de animal"  />
            <span asp-validation-for="Animal" class="text-danger"></span>
        </div>
        

        

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
        </div>
    </div>
</div>