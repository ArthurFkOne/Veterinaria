@model Veterinaria_Web.Models.Entities.Rol
@{
    Layout = "_LayoutDashboard";
    <link rel="stylesheet" href="~/css/cruds.css" asp-append-version="true" />
}


<div class="container-fluid espaciado">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear Usuarios</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Crear" method="post">


                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />

                    </div>


                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>

                </form>

                <a asp-controller="Roles" asp-action="Index">Volver</a>


            </div>


        </div>


    </div>




</div>