@{
    Layout = "";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
}

<a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn-lg btn-danger">Regresar</button></a>

<div class="container">

    <div class="form-group mt-3 container">
        <h2>Inicia Sesión</h2>

        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="user">
        </div>
    </div>
    <div class="form-group mt-3 container">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-5">
            <input type="password" class="form-control" id="password">
        </div>
        <p id="parrafo1"></p>
    </div>
    <div id="FormLog">

        <button type="submit" id="Login" class="btn btn-success d-block">Iniciar</button>

    </div>


</div>


<script>
    $(document).ready(function () {
        $("#Login").click(function () {

            var user = $("#user").val();
            var password = $("#password").val();

            $.ajax({
                url: "/Home/LoginUser",
                type: "POST",
                data: {
                    "user": user,
                    "password": password
                },
                dataType: "json",
                success: function (response) {
                    console.log(response)

                    if (response.success == true) {

                        //debugger
                        if (response.admin == true) {
                            window.location.href = "/Articulo/Index";
                        }
                        else {


                            window.location.href = "/Articulo/IndexCopia";
                        }

                    }
                    else

                        $("#parrafo1").html("<div  class='alert alert-danger alert-dismissible fade show' role='alert'><strong>Usuario o contraseña incorrecto</strong> Intentalo de nuevo.</div>");

                },
                error: function () {
                    console.log('Login Fail Xc   !!!');
                }
            });
        });




    });

</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script type="text/javascript" src="~/js/nav.js" asp-append-version="true"></script>